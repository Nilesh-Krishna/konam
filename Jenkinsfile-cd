pipeline {
    agent any

    environment {
        AWS_REGION   = "ap-south-1"
        CLUSTER_NAME = "konam-cluster"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Configure EKS access') {
            steps {
                sh '''
                  echo "Configuring kubeconfig..."
                  mkdir -p ~/.kube
                  aws eks update-kubeconfig \
                    --region $AWS_REGION \
                    --name $CLUSTER_NAME
                '''
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                  kubectl apply -f kubernets/ --validate=false
                  kubectl rollout status deployment/konam-app
                '''
            }
        }

        stage('Verify') {
            steps {
                sh '''
                  kubectl get pods
                  kubectl get svc
                '''
            }
        }
    }
}

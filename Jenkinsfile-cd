pipeline {
    agent any

    environment {
        AWS_REGION   = "ap-south-1"
        CLUSTER_NAME = "konam-cluster"
        DOCKER_IMAGE = "nilesh2509/konam-app"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Configure kubeconfig') {
            steps {
                sh '''
                  mkdir -p ~/.kube
                  aws eks update-kubeconfig --region $AWS_REGION --name $CLUSTER_NAME
                '''
            }
        }

        stage('Update image tag') {
            steps {
                sh '''
                  sed -i "s/artifact-BUILD_NUMBER/artifact-${BUILD_NUMBER}/g" kubernets/deployment.yaml
                '''
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                  kubectl apply -f kubernets/
                  kubectl rollout status deployment/konam-app
                '''
            }
        }
    }
}

pipeline {
    agent any

    environment {
        AWS_REGION   = "ap-south-1"
        CLUSTER_NAME = "konam-cluster"
        DOCKER_IMAGE = "nilesh2509/konam-app"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Configure EKS Access') {
            steps {
                sh '''
                  aws eks update-kubeconfig \
                    --region $AWS_REGION \
                    --name $CLUSTER_NAME
                '''
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                  kubectl apply -f kubernets/ --validate=false
                  kubectl rollout status deployment/konam-app
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployed to EKS successfully"
        }
        failure {
            echo "❌ Deployment failed"
        }
    }
}
